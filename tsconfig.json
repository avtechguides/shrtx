{
  "extends": "astro/tsconfigs/strict",
  "include": [
    "src",
    "astro.config.*",
    "env.d.ts",
    ".astro/types.d.ts"
  ],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@content/*": ["src/content/*"],
      "@styles/*": ["src/styles/*"],
      "@lib/*": ["src/lib/*"],
      "@data/*": ["src/data/*"],
      "@config/*": ["src/config/*"],
      "@assets/*": ["src/assets/*"]
    },
    "moduleResolution": "bundler"
  }
}
