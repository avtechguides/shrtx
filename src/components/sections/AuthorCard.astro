---
import { author } from '@/data/author'; // Use @/ if you have path aliases set up; otherwise, use '../data/author'
---

<section class="author-card max-w-md mx-auto p-4 rounded-lg bg-[var(--card)] shadow-md text-[var(--foreground)]">
  <img
    src={author.avatar.src}
    alt={`Avatar of ${author.name}`}
    class="w-24 h-24 rounded-full mx-auto mb-4 border object-cover"
    loading="lazy"
    width="96"
    height="96"
  />
  <h2 class="text-center text-xl font-semibold mb-1">{author.name}</h2>
  <p class="text-center mb-2 text-sm text-[var(--muted-foreground)]">{author.bio}</p>
  <p class="text-center text-sm mb-3">{author.location}</p>
  <div class="flex justify-center space-x-4 mb-4">
    {author.social?.github && (
      <a href={author.social.github} target="_blank" rel="noopener" class="text-[var(--accent)] hover:underline">GitHub</a>
    )}
    {author.social?.twitter && (
      <a href={author.social.twitter} target="_blank" rel="noopener" class="text-[var(--accent)] hover:underline">X</a>
    )}
    {author.social?.linkedin && (
      <a href={author.social.linkedin} target="_blank" rel="noopener" class="text-[var(--accent)] hover:underline">LinkedIn</a>
    )}
    {author.social?.youtube && (
      <a href={author.social.youtube} target="_blank" rel="noopener" class="text-[var(--accent)] hover:underline">Youtube</a>
    )}
  </div>
  <p class="text-center text-sm">
    <a href={`mailto:${author.email}`} class="underline text-[var(--accent)]">{author.email}</a>
  </p>
</section>
