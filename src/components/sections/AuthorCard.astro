---
import { author } from '@/data/author';
---

<section class="author-card max-w-md mx-auto p-6 rounded-2xl bg-[var(--card)] shadow-md text-[var(--foreground)]">
  <img
    src={author.avatar.src}
    alt={`Avatar of ${author.name}`}
    class="w-24 h-24 rounded-full mx-auto mb-4 border border-[var(--accent)] object-cover"
    loading="lazy"
    width="96"
    height="96"
  />
  <h2 class="text-center text-xl font-semibold mb-1">{author.name}</h2>
  <p class="text-center mb-2 text-sm text-[var(--muted-foreground,#6b7280)]">{author.bio}</p>
  <p class="text-center text-sm mb-4">{author.location}</p>
  <div class="flex justify-center space-x-6 mb-6">
    {author.social?.github && (
      <a href={author.social.github} target="_blank" rel="noopener" class="text-[var(--accent)] hover:underline focus:outline-none focus:ring-2 focus:ring-[var(--accent)] rounded">
        GitHub
      </a>
    )}
    {author.social?.twitter && (
      <a href={author.social.twitter} target="_blank" rel="noopener" class="text-[var(--accent)] hover:underline focus:outline-none focus:ring-2 focus:ring-[var(--accent)] rounded">
        X
      </a>
    )}
    {author.social?.linkedin && (
      <a href={author.social.linkedin} target="_blank" rel="noopener" class="text-[var(--accent)] hover:underline focus:outline-none focus:ring-2 focus:ring-[var(--accent)] rounded">
        LinkedIn
      </a>
    )}
    {author.social?.youtube && (
      <a href={author.social.youtube} target="_blank" rel="noopener" class="text-[var(--accent)] hover:underline focus:outline-none focus:ring-2 focus:ring-[var(--accent)] rounded">
        YouTube
      </a>
    )}
  </div>
  <p class="text-center text-sm">
    <a href={`mailto:${author.email}`} class="underline text-[var(--accent)] hover:text-[var(--accent-dark)] focus:outline-none focus:ring-2 focus:ring-[var(--accent)] rounded">
      {author.email}
    </a>
  </p>
</section>
