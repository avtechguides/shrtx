---
interface Props {
  title?: string;
  subtitle?: string;
  center?: boolean;
  showQuick?: boolean;    // defaults to false now
  shortenHref?: string;
  qrHref?: string;
}

const {
  title = 'SHRTX Utility Tools',
  subtitle = 'Your daily companion for productivity. Explore our online tools including URL shortener, QR code generator, JSON formatter, and more.',
  center = false,
  showQuick = false,      // changed default
  shortenHref = '/shorten',
  qrHref = '/qr',
} = Astro.props as Props;
---

<section
  class="w-full pt-[calc(var(--header-offset,64px)+0.5rem)] pb-10 bg-[var(--background)] text-[var(--foreground)] transition-colors duration-300"
  aria-labelledby="toolhero-title"
>
  <!-- Match home: max-w-5xl, px-4, text-center block with bottom margin -->
  <div class="max-w-5xl mx-auto px-4 text-center mb-8">
    <h1
      id="toolhero-title"
      class="text-4xl md:text-6xl font-extrabold tracking-tight mb-4"
    >
      <span class="bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] bg-clip-text text-transparent">
        {title}
      </span>
    </h1>

    {subtitle && (
      <p class="mt-2 text-lg md:text-xl text-[var(--muted-foreground,#6b7280)] max-w-2xl mx-auto transition-colors duration-300">
        {subtitle}
      </p>
    )}

    {showQuick && (
      <div class={['mt-4 flex gap-3', center ? 'justify-center' : 'justify-center'].join(' ')}>
        <a
          href={shortenHref}
          class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-[var(--card)] text-[var(--card-foreground)] ring-1 ring-inset ring-[var(--border)] shadow hover:shadow-md transition hover:-translate-y-0.5 relative group"
          aria-label="Open URL Shortener"
        >
          <span aria-hidden="true">ðŸ”—</span>
          <span class="font-semibold">Shorten URL</span>
          <span aria-hidden="true" class="pointer-events-none absolute inset-0 rounded-xl p-[2px] opacity-10 group-hover:opacity-30 transition-opacity">
            <span
              class="absolute inset-0 rounded-xl"
              style="background: linear-gradient(90deg, var(--accent), var(--accent-dark));
                    mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
                    -webkit-mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
                    -webkit-mask-composite: xor; mask-composite: exclude; padding: 2px;"
            ></span>
          </span>
        </a>

        <a
          href={qrHref}
          class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-[var(--card)] text-[var(--card-foreground)] ring-1 ring-inset ring-[var(--border)] shadow hover:shadow-md transition hover:-translate-y-0.5 relative group"
          aria-label="Open QR Code Generator"
        >
          <span aria-hidden="true">ðŸ“±</span>
          <span class="font-semibold">Generate QR</span>
          <span aria-hidden="true" class="pointer-events-none absolute inset-0 rounded-xl p-[2px] opacity-10 group-hover:opacity-30 transition-opacity">
            <span
              class="absolute inset-0 rounded-xl"
              style="background: linear-gradient(90deg, var(--accent), var(--accent-dark));
                    mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
                    -webkit-mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
                    -webkit-mask-composite: xor; mask-composite: exclude; padding: 2px;"
            ></span>
          </span>
        </a>
      </div>
    )}
  </div>
</section>

<style>
/* Uses same tokens as home; ensure var(--background), --card, --border, --accent are identical on tools page */
</style>
