---
import ToolSearch from '@components/ui/tools/ToolSearch.astro';
import CategoryGallery from '@components/sections/CategoryGallery.astro';

interface Props {
  tools: any[];
  class?: string;
}
const { tools, class: className = "" } = Astro.props as Props;
---

<aside class={`sticky top-20 space-y-8 p-4 border-r border-gray-700 min-w-[220px] bg-[var(--color-bg-secondary)] rounded-lg ${className}`}>
  <ToolSearch tools={tools} />
  <div>
    <h2 class="font-bold text-lg mb-3 text-[var(--color-text-primary)]">Categories</h2>
    <CategoryGallery tools={tools} title="" subtitle="" />
  </div>
</aside>
