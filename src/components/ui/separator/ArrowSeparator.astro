---
interface Props {
  size?: number | string;
  class?: string;
  label?: string; // optional accessible label
}
const { size = 28, class: className, label = 'Scroll down' } = Astro.props as Props;
const dimension = typeof size === 'number' ? `${size}` : String(size);
---

<div class={['sw-separator-arrow', className].filter(Boolean).join(' ')} role="img" aria-label={label}>
  <svg
    class="sw-chevron text-[var(--muted-foreground,#6b7280)]"
    width={dimension}
    height={dimension}
    viewBox="0 0 24 24"
    fill="none"
    aria-hidden="true"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path d="M6 9l6 6 6-6" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
  </svg>
</div>
