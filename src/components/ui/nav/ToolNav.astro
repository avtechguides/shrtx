---
interface NavItem {
  id: string;   // tool slug
  title: string;
}
interface Props {
  prev?: NavItem | null;
  next?: NavItem | null;
}
const { prev = null, next = null } = Astro.props as Props;
---

{(prev || next) && (
  <nav
    class="sw-post-nav mt-8 pt-4 border-t border-[var(--border)]"
    aria-label="Tool navigation"
  >
    <div class="flex flex-col md:flex-row md:justify-between gap-4">
      {prev ? (
        <a
          href={`/tools/${prev.id}`}
          class="sw-nav-btn no-underline flex-1 flex items-center gap-2"
          aria-label={`Previous: ${prev.title}`}
        >
          <svg
            viewBox="0 0 24 24"
            width="16"
            height="16"
            aria-hidden="true"
            focusable="false"
            class="shrink-0"
          >
            <path fill="currentColor" d="M15.41 7.41 14 6l-6 6 6 6 1.41-1.41L10.83 12z" />
          </svg>
          <div class="sw-nav-text truncate">
            <span class="sw-nav-label block text-xs text-[var(--muted-foreground,#6b7280)] mb-0.5">Previous</span>
            <span class="font-semibold text-[var(--foreground)]">{prev.title}</span>
          </div>
        </a>
      ) : (
        <span class="flex-1" />
      )}

      {next ? (
        <a
          href={`/tools/${next.id}`}
          class="sw-nav-btn no-underline flex-1 flex items-center gap-2 justify-end"
          aria-label={`Next: ${next.title}`}
        >
          <div class="sw-nav-text truncate text-right">
            <span class="sw-nav-label block text-xs text-[var(--muted-foreground,#6b7280)] mb-0.5">Next</span>
            <span class="font-semibold text-[var(--foreground)]">{next.title}</span>
          </div>
          <svg
            viewBox="0 0 24 24"
            width="16"
            height="16"
            aria-hidden="true"
            focusable="false"
            class="shrink-0"
          >
            <path fill="currentColor" d="m8.59 16.59 1.41 1.41 6-6-6-6-1.41 1.41L13.17 12z" />
          </svg>
        </a>
      ) : (
        <span class="flex-1" />
      )}
    </div>
  </nav>
)}
