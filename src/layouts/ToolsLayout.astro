---
// Layout for tools pages
import Seo from '@components/Seo.astro';
import Header from '@components/sections/Header.astro';
import Footer from '@components/sections/Footer.astro';
import type { ImageMetadata } from 'astro';

export interface Props {
  title: string;
  description?: string;
  path?: string;
  image?: ImageMetadata;
  imageAlt?: string;
  showHeader?: boolean;
  noindex?: boolean;
  category?: string;
  popularity?: number;
  isPremium?: boolean;
}

const {
  title,
  description = '',
  path = Astro.url.pathname,
  image,
  imageAlt,
  showHeader = true,
  noindex = false,
  category,
  popularity,
  isPremium,
} = Astro.props as Props;
---

<html lang="en">
  <head>
    <Seo
      title={title}
      description={description}
      path={path}
      image={image}
      type="page"
      noindex={noindex}
    />
  </head>
  <body class="bg-[var(--color-bg-primary)] text-[var(--color-text-primary)] antialiased">
    <Header />

    <main class="max-w-6xl mx-auto px-4 py-10 space-y-10">
      {showHeader && (
        <header class="text-center space-y-4">
          {image && (
            <img
              src={image.src}
              width={1020}
              height={510}
              alt={imageAlt ?? title}
              class="rounded-2xl shadow-lg mx-auto"
              loading="lazy"
            />
          )}

          <!-- Gradient title -->
          <h1 class="text-4xl md:text-5xl font-bold gradient-text">{title}</h1>

          {description && (
            <p class="text-lg text-[var(--color-text-muted)] max-w-2xl mx-auto">
              {description}
            </p>
          )}

          {(category || popularity !== undefined || isPremium !== undefined) && (
            <div class="flex justify-center flex-wrap gap-2 mt-4">
              {category && (
                <span class="px-3 py-1 text-sm rounded-full border bg-[var(--color-bg-secondary)] text-[var(--color-text-muted)]">
                  Category: {category}
                </span>
              )}
              {popularity !== undefined && (
                <span class="px-3 py-1 text-sm rounded-full border bg-[var(--color-bg-secondary)] text-[var(--color-text-muted)]">
                  Popularity: {popularity}
                </span>
              )}
              {isPremium !== undefined && (
                <span class="px-3 py-1 text-sm rounded-full border bg-[var(--color-bg-secondary)] text-[var(--color-text-muted)]">
                  {isPremium ? 'Premium' : 'Free'}
                </span>
              )}
            </div>
          )}
        </header>
      )}

      <article class="bg-[var(--color-bg-secondary)] rounded-2xl shadow p-6 space-y-6">
        <slot />
      </article>
    </main>

    <Footer />
  </body>
</html>
