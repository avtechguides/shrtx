---
import Seo from '@components/Seo.astro';
import Header from '@components/sections/Header.astro';
import Footer from '@components/sections/Footer.astro';
import ToolCard from '@components/ui/tools/ToolCard.astro';
import ToolHero from '@components/sections/ToolHero.astro';
import { tools } from '../../data/tools';

const pageTitle = 'SHRTX Utility Tools';
const pageDescription = 'Your daily companion for productivity. Explore our online tools including URL shortener, QR code generator, JSON formatter, and more.';
---

<html lang="en" data-theme="dark" class="dark">
  <head>
    <Seo
      title={pageTitle}
      description={pageDescription}
      path="/tools"
      type="page"
    />
  </head>
  <body class="bg-[var(--color-bg-primary)] text-[var(--color-text-primary)] transition-colors duration-300">
    <Header />

    <ToolHero title={pageTitle} subtitle={pageDescription} center />

    <main class="max-w-[1280px] mx-auto bg-[var(--color-bg-primary)] px-4 py-16">
      <section class="max-w-[870px] mx-auto text-[var(--color-text-secondary)]">
        <div class="grid gap-6" style="grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));">
          {tools.map(tool => (
            <ToolCard
              key={tool.slug}
              title={tool.title}
              description={tool.description}
              icon={tool.icon}
              href={`/tools/${tool.slug}`}
            />
          ))}
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
